<div">
    <form method="POST" action="<%= `/users/${currentUser._id}/update?_method=PUT` %>">
        <div class="container-fluid EditInfo">

          <!-- Title -->
          <div class="col rounded ">
              <div class=" titleText text-center border-bottom">
                User Information for <%= currentUser.Handle %>
              </div>
          </div>

