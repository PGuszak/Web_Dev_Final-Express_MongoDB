<header>
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    <!-- icons -->
    <script src="https://kit.fontawesome.com/e3c832e492.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/homepage.css">

</header>



<p class=" row introHeader ">Hello, <%= currentUser.firstName %>! </p>


<div class="row d-flex mainDiv ">




    <div class="col-lg-4 middleColGeneral justify-content-center d-none d-lg-block">
        <div class="row justify-content-center">
            <div class="card toolBoxGeneral d-none d-lg-block col-lg-8 ">

                <div class="card-header">

                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-center ">
                        <%= currentUser.firstName %>
                            <%= currentUser.lastName %></a>
                    </div>

                </div>

                <div class="card-body ">


                    <!-- userPage -->
                    <!-- start -->
                    <div class="row mt-0 border">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                            <a class="" href="<%= `/users/${currentUser.id}/userPage` %> ">
                                <i class="fas fa-user-astronaut fa-3x "></i>
                            </a>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                            <a class="" href="<%= `/users/${currentUser.id}/userPage` %> " style="color: black">
                                My Account
                            </a>
                        </div>

                    </div>
                    <!-- end -->


                    <!-- Projects -->
                    <!-- start -->
                    <div class="row mt-4 border">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                            <a class="" href="<%= `/users/${currentUser.id}/projects` %> ">
                                <i class="fas fa-folder-open fa-3x "></i>
                            </a>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                            <a class="" href="<%= `/users/${currentUser.id}/projects` %> " style="color: black">
                                My Projects
                            </a>
                        </div>

                    </div>
                    <!-- end -->


                    <!-- Posts -->
                    <!-- start -->
                    <div class="row mt-4 border">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                            <a class="" href="<%= `/users/${currentUser.id}/posts` %> ">
                                <i class="fas fa-keyboard fa-3x "></i>
                            </a>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                            <a class="" href="<%= `/users/${currentUser.id}/posts` %> " style="color: black">
                                My Posts
                            </a>
                        </div>

                    </div>
                    <!-- end -->


                    <!-- Friends -->
                    <!-- start -->

                    <!-- end -->


                    <!-- logout -->
                    <!-- start -->
                    <div class="row mt-4 border">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                            <a class="" href="/users/logout">
                                <i class="fas fa-sign-out-alt fa-3x "></i>
                            </a>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                            <a class="" href="/users/logout" style="color: black">
                                Logout
                            </a>
                        </div>

                    </div>
                    <!-- end -->


                </div>
            </div>
            <div class="card toolBoxFriends d-none d-lg-block col-lg-8 ">
                <div class="card-header">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-center ">
                        <div class="">
                            <a class="" href="<%= `/users/${currentUser.id}/friends` %> " style="color: black">
                                Followed Users
                            </a>
                        </div>
                        
                    </div>
                    

                    
                </div>

                <div class="card-body friendsList">

                    

                    <table class="table ">

                        <% currentUser.following.forEach(friend=> { %>


                            <div class="container-fluid d-flex">
                                <div class="">
                                    
                                        <div>
                                            UserName: <%= friend.userName %>
                                        </div>
                                        <div>
                                            UserID: <%= friend.userID %>
                                        </div>
                                    
                                </div>
                    
                            </div>
                    
                            <br>
                    
                    
                            <% }) %>
                    </table>



                </div>

            </div>

            <!-- footer -->
            <footer class="footer d-none d-lg-block col-lg-8 ">
                Copyright - CeRaTech, Subscorpion, Gabriel Jones
                <span>
                    <input style="text-align: center;" class="footer_info_buttton" type="button"
                        value="More Information Here">
                    <!-- link to an information page -->
                </span>
            </footer>
        </div>

        <br>

    </div>


    <div class="middleColGeneral col-lg-8 col-md-12 col-sm-12 col-12  ">

        <!--Used to create the post creation box -->
        <!--Start-->
        <div class="container-fluid d-flex justify-content-center">
            <div class="card cardUserPost">

                <div class="card-header text-center">
                    Create Post
                </div>

                <div class="form-data card-body">
                    <div class="row d-flex justify-content-center"></div>
                    <form action="<%=`/posts/${currentUser._id}/create` %>" method="POST">
                        <div row>


                            <textarea class="form-control" type="text" name="caption" id="txtCaption" rows="1"
                                placeholder="What are you thinking?" autofocus required></textarea>

                            <hr class="hrLineCreatePost">
                            <!--name is for server side id is for client side processing-->

                            <div>
                                <button type="submit" class="btn btn-primary btn-block">Create</button>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>

        <!--End-->
        <br>
        <table class="table whiteText border">

            <% posts.forEach(post=> { %>
                
                <div class="container-fluid d-flex justify-content-center">
                    <div class="card cardGeneralPost">
                        
                        <div class="card-header text-start">
                            <div>
                                User: <%= post.userName %>
                            </div>
                            <div>
                                Published: <%= post.createdAt %>
                            </div>
                        </div>

                        <div class="card-body">
                            <p class="card-text">
                                <%= post.caption %>
                            </p>
                        </div>

                        <span class="card-footer d-flex justify-content-start">

                            <span class="card-text">
                                <i class="fas fa-heart" style="color: red;"></i>
                                <%= post.likes %>
                            </span>
                        </span>

                        <div class="card-footer d-flex justify-content-center">
                            <a href="" class="card-link"><i class="fas fa-heart"></i> Like</a>
                            <a href="" class="card-link"><i class="fa fa-comment"></i> Comment</a>
                            <a href="" class="card-link"><i class="fa fa-mail-forward"></i> Share</a>
                        </div>
                    </div>

                </div>
                
                <% }) %>
        </table>
    </div>
</div>




</div>

<br>

<script src="js/jquery-3.5.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/script.js"></script>