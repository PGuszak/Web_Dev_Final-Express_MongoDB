                    </div>

                </div>
                <!-- end -->


                <!-- Posts -->
                <!-- start -->
                <div class="row mt-4 border">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                        <a class="" href="<%= `/users/${currentUser.id}/posts` %> ">
                            <i class="fas fa-keyboard fa-3x "></i>
                        </a>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                        <a class="" href="<%= `/users/${currentUser.id}/posts` %> " style="color: black">
                            My Posts
                        </a>
                    </div>

                </div>
                <!-- end -->


                <!-- Friends -->
                <!-- start -->
                <div class="row mt-4 border">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                        <a class="" href="<%= `/users/${currentUser.id}/friends` %> ">
                            <i class="fas fa-user-friends fa-3x "></i>
                        </a>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                        <a class="" href="<%= `/users/${currentUser.id}/friends` %> " style="color: black">
                            My Friends
                        </a>
                    </div>

                </div>
                <!-- end -->


                <!-- logout -->
                <!-- start -->
                <div class="row mt-4 border">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center">
                        <a class="" href="/logout">
                            <i class="fas fa-sign-out-alt fa-3x "></i>
                        </a>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center">
                        <a class="" href="/logout" style="color: black">
                            Logout
                        </a>
                    </div>

                </div>
                <!-- end -->


            </div>
        </div>
    </div>




    <div class="middleColGeneral col-lg-8 col-md-12 col-sm-12 col-12">

        <!--Used to create the post creation box -->
        <!--Start-->
        <div class="container-fluid d-flex justify-content-center">
            <div class="card cardUserPost">

                <div class="card-header text-center">
                    Create Post
                </div>

                <div class="form-data card-body">
                    <div class="row d-flex justify-content-center"></div>
                    <form action="<%=`/posts/${currentUser._id}/create` %>" method="POST">
                        <div row>


                            <textarea class="form-control" type="text" name="caption" id="txtCaption" rows="1"
                                placeholder="What are you thinking?" autofocus required></textarea>

                            <hr class="hrLineCreatePost">
                            <!--name is for server side id is for client side processing-->

                            <div>
                                <button type="submit" class="btn btn-primary btn-block">Create</button>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!--End-->


