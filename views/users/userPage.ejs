

        <header>
            <!-- bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>


    <!-- icons -->
    <script src="https://kit.fontawesome.com/e3c832e492.js" crossorigin="anonymous"></script>


    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css">

    
        </header>
        <div class="row d-flex mainDiv">
        <div class="container-fluid border-dark rounded userProfileHeader border">

            <div class="row justify-content-center pt-4 pb-3">
                <img src="/images/Ramirez_Cesar_PFP.jpg" width="280" height="280"
                    class="d-inline-block align-top rounded-circle border profilePictureBorder" alt="">
            </div>

            <div class="row justify-content-center">
                <div class="col-12 text-center">
                    <span class="userName border-dark rounded"> <%= currentUser.firstName %> <%= currentUser.lastName %></span>
                </div>

                <div class="col-12 text-center">
                    <span class="userNameSub border-dark rounded"> @<%= currentUser.Handle %> #<%= currentUser.UniqueID %></span>
                </div>
            </div>

            <div class="row justify-content-center pt-2 pb-4">
                <a type="button" class="col-2 btn btn-primary">Add Friend</a> <!-- finish later page-->
                <a href="<%= `/users/${currentUser._id}/edit` %> " type="button" class="col-2 btn btn-primary">Edit</a> <!--here-->
            </div>

        </div>


        <div class="row userInfoRowsIconBar">

            <!-- Discussions -->
            <div class="col-lg-4 col-md-12 col-sm-12 col-12">

                <div class="row m-1">

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center userInfoRowsContent">
                        <i class="fas fa-keyboard fa-3x iconsGeneral align-self-center"></i>
                    </div>


                    <div class="col-lg-6 col-md-6 col-sm-6 col-6  align-self-center userInfoRowsText">
                        <div>View Posts</div>
                    </div>

                </div>

            </div>

            <!-- Gallary fa-camera-retro -->

            <div class="col-lg-4 col-md-12 col-sm-12 col-12 ">

                <div class="row m-1">

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center userInfoRowsContent">
                        <i class="fas fa-camera-retro fa-3x iconsGeneral align-self-center"></i>
                    </div>


                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 align-self-center userInfoRowsText">
                        <div>View Photos</div>
                    </div>

                </div>

            </div>


            <!-- Projects fa-folder-open -->

            <div class="col-lg-4 col-md-12 col-sm-12 col-12 ">

                <div class="row m-1">

                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center userInfoRowsContent ">
                        <i class="fas fa-folder-open fa-3x iconsGeneral align-self-center"></i>
                    </div>


                    <div class="col-lg-6 col-md-6 col-sm-6 col-6 userInfoRowsText align-self-center">
                        <div>View Projects</div>
                    </div>

                </div>

            </div>

        </div>



        <!-- User Info Row 1 -->
        <div class="container-fluid userInfoRowsSingle">

            <!-- Overview -->
            <div class="col rounded ">
                <div class=" titleText text-center border-bottom">
                    Overview
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center whiteText">
                    Age:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    <%= currentUser.Age %>
                </div>
            </div>

            <br>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center  whiteText">
                    Relationship Status:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center  whiteText">
                    Single
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    Lives in:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    <%= currentUser.City_State %>
                </div>
            </div>


        </div>




        <!-- User Info Row 2 -->
        <div class="container-fluid userInfoRowsSingle">

            <!-- Overview -->
            <div class="col rounded ">
                <div class=" titleText text-center border-bottom">
                    Work and Education
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center whiteText">
                    Highschool:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    <%= currentUser.Highschool %>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center  whiteText">
                    University:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center  whiteText">
                    <%= currentUser.University %>
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    Works:
                </div>

                <div class="col-lg-6 col-md-6 col-sm-6 col-6 d-flex justify-content-center   whiteText">
                    <%= currentUser.Work %>
                </div>
            </div>


        </div>

        <!-- User Info Row 2 -->
        <div class="container-fluid userInfoRowsSingle">
            <div class="col border-dark rounded ">
                <div class=" titleText text-center border-bottom ">
                    Friends
                </div>
            </div>
        </div>

    </div>