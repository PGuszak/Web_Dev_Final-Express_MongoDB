<!DOCTYPE html>
<html lang="en">
    

    <head>

        <title>Orbit Home Page</title>

        <!-- bootstrap -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    <!-- icons -->
    <script src="https://kit.fontawesome.com/e3c832e492.js" crossorigin="anonymous"></script>
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css">
        
    </head>

    <body>

        <header>
            
    <!-- Nav Bar -->
    <% if(currentUser) { %>
        <nav class="navbar navbar-expand-md navbar-custom">
            <div class="d-flex justify-content-start">
                <div>
                    <img src="/images/OrbitLogo.png" width="45" height="45" class="d-inline-block align-top" alt="">
                </div>
            </div>
            <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item nav active">
                        <a class="nav-link navbar-text" href="<%= `/home/${currentUser.id}` %>">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link navbar-text" href="#">Discussions</a>
                    </li>


                </ul>

                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    <% } %>
        </header>
        



            <div class="container-fluid ">
                <%- body %>
            </div>

            


    </body>



    
   

</html>